{{#> base-layout}}
<div class="header-center"
    style="text-align: center; margin-bottom: 30px; border-bottom: 2px solid #000; padding-bottom: 10px;">
    <h2 style="text-transform: uppercase; margin: 0; letter-spacing: 2px;">Inter-Office Memorandum</h2>
</div>

<div class="meta-grid" style="display: grid; grid-template-columns: 100px 1fr; gap: 10px; margin-bottom: 30px;">
    <div style="font-weight: bold;">To:</div>
    <div>{{data.toAddress}}</div>

    <div style="font-weight: bold;">From:</div>
    <div>{{data.fromDepartment}}</div>

    <div style="font-weight: bold;">Ref No:</div>
    <div>{{data.referenceNumber}}</div>

    <div style="font-weight: bold;">Date:</div>
    <div>{{data.date}}</div>
</div>

<div class="subject-line" style="margin-bottom: 20px; font-weight: bold; text-decoration: underline;">
    Sub: {{data.subject}}
</div>

<div class="content-body" style="text-align: justify; line-height: 1.6; margin-bottom: 40px;">
    {{{data.bodyContent}}}
</div>

<div class="signatory" style="float: right; text-align: right; width: 40%;">
    <p>Yours faithfully,</p>
    <br><br><br>
    <strong>{{data.signatoryName}}</strong><br>
    {{data.signatoryDesignation}}
</div>

<div style="clear: both;"></div>

{{#if data.enclosures}}
<div class="enclosures" style="margin-top: 30px; font-size: 10pt;">
    <strong>Encl:</strong>
    <ul style="margin-top: 5px; padding-left: 20px;">
        {{#each data.enclosures}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
</div>
{{/if}}

{{#if data.ccList}}
<div class="cc-block" style="margin-top: 20px; font-size: 10pt;">
    <strong>CC:</strong>
    <ul style="margin-top: 5px; list-style: none; padding-left: 0;">
        {{#each data.ccList}}
        <li>- {{this}}</li>
        {{/each}}
    </ul>
</div>
{{/if}}

{{/base-layout}}